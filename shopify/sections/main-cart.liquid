{% schema %}
{
  "name": "Cart Section",
  "settings": [
    {
      "type": "text",
      "id": "summary-message",
      "label": "Cart Summary Message",
      "default": "Taxes and shipping calculated at checkout"
    }
  ]
}
{% endschema %}

{{ 'main-cart.css' | asset_url | stylesheet_tag }}

<div class="cart" data-ajax-cart-section>
  <div class="cart-inner shell">
    {% if cart.item_count > 0 %}
    <form action="{{ routes.cart_url }}" method="POST" id="cart">
      <table style="width:100%">
        <tr style="text-align: left;">
          <th>Product</th>
          <th>Price</th>
          <th>Quantity</th>
          <th></th>
          <th>Total</th>
        </tr>
        {% for item in cart.items %}
        <tr data-item-key="{{ item.key }}">
          <td>
            {{ item.title }}
            <div data-ajax-cart-messages="{{ item.key }}" style="color: red; font-size: 10px;">
              <!-- Error messages appear here -->
            </div>
          </td>
          <td>
            {{ item.price | money }}
          </td>
          <td>
            {% if item.quantity == 1 %}
            <span>-</span>
            {% else %}
            <a href="{{ routes.cart_change_url }}?id={{ item.key }}&quantity={{ item.quantity | minus: 1 | at_least: 1 }}"
              style="text-decoration: none;">-</a>
            {% endif %}
            <input 
              type="number" value="{{ item.quantity }}" 
              data-ajax-cart-quantity-input="{{ item.key }}"
              style="width: 40px;" 
            />
            <img 
              class="loading-indicator" 
              src="{{ 'loading.static.gif' | asset_url }}" 
              alt="Loading Indicator" 
              role="alert"
              aria-busy="false"
            >
            <a href="{{ routes.cart_change_url }}?id={{ item.key }}&quantity={{ item.quantity | plus: 1 }}"
              style="text-decoration: none;">+</a>
          </td>
          <td>
            <a href="{{ item.url_to_remove }}">Remove</a>
          </td>
          <td>
            {{ item.final_line_price | money }}
          </td>
        </tr>
        {% endfor %}
      </table>


    </form>

    <div class="cart-summary-row">
      <div class="totals">
        <h3>Subtotal</h3>
        <p>{{ cart.original_total_price | money }}</p>
      </div>
      <small>{{ section.settings.summary-message }}</small>
      <button class="btn inverted" type="submit" name="checkout" form="cart">
        {{ 'sections.cart.checkout' | t }}
      </button>
    </div>
    {% else %}

    <h2>You have no items in your cart.</h2>

    {% endif %}

  </div>
</div>

<style>
  .cart .cart-inner {
    padding: 30px 20px;
  }

  .cart .cart-inner .cart-summary-row {
    padding: 30px 0;
    display: flex;
    flex-direction: column;
    align-items: flex-end;
  }

  .cart .cart-inner .cart-summary-row .totals {
    display: flex;
    margin-bottom: 10px;
  }

  .cart .cart-inner .cart-summary-row .totals h3 {
    margin-right: 30px;
  }

  .cart .cart-inner .cart-summary-row small {
    margin-bottom: 10px;
  }

  .cart .cart-inner .cart-summary-row .btn {
    max-width: 350px;
  }

  .cart .error-notif {
    display: block;
    font-size: 12px;
    color: red;
  }

  .cart tr>td,
  .cart tr>th {
    padding-bottom: 1em;
  }

  .cart .loading-indicator {
    display: none;
    height: 16px;
    width: 16px;
  }
</style>