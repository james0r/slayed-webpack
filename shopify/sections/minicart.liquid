<div class="minicart" data-ajax-cart-section>
  <div class="title-row">
    <h2 id="minicart-label">
      Cart
    </h2>
    <button @click="$store.globals.minicartIsShowing = false">
      {% render 'icon-close-x' %}
    </button>
  </div>
  <div class="item-count-message">
    You have
    <span class="count" style="font-weight: 600" x-data>{{ cart.item_count }}</span>
    <span x-data></span>
    in your cart!
  </div>
  <hr />
  <ul class="items-list" data-ajax-cart-section-scroll>

    {% for item in cart.items %}
    <li class="item">
      <div class="product-thumb-wrapper">
        <img class="product-thumb" src="{{ item.image | img_url: '100x' }}" alt="{{ item.title }}" />
      </div>
      <div class="item-details">
        <h4 class="title">
          {{ item.title | truncatewords: 5 }}
        </h4>
        <div class="options">
          {% for option in item.options_with_values %}
          <p class="option" data-option-name="{{ option.name }}">
            <span style="font-weight: 600">{{ option.name }}: </span>
            <span>{{ option.value }}</span>
          </p>
          {% endfor %}
        </div>
        <div class="quantity-row">
          <span style="font-weight: bold;">Quantity: </span><span>{{ item.quantity }}</span>
        </div>
        <p class="price">{{ item.price | money }}</p>
        <p class="remove">
          <a href="{{ item.url_to_remove }}">
            <i class="fa fa-trash-o"></i>
            Remove from cart
          </a>
        </p>
      </div>
    </li>
    {% endfor %}

  </ul>
  <hr />
  <div class="subtotal">
    <p class="title">Subtotal</p>
    <p class="amount">{{ cart.items_subtotal_price | money }}</p>
  </div>
  <a class="cart-link" href="{{ routes.cart_url }}">View Cart Details</a>

</div>


